<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.jj.base.common.view.WheelView
        android:id="@+id/first_wheel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:itemNumber="2"
        app:setDefaultWheelData="false"
        app:splitLineWidthRatio="0.5"
        app:wheelStyle="@integer/STYLE_YEAR" />

    <com.jj.base.common.view.WheelView
        android:id="@+id/second_wheel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:itemNumber="2"
        app:setDefaultWheelData="false"
        app:splitLineWidthRatio="0.5"
        app:wheelStyle="@integer/STYLE_MONTH" />

    <com.jj.base.common.view.WheelView
        android:id="@+id/third_wheel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:itemNumber="2"
        app:setDefaultWheelData="false"
        app:splitLineWidthRatio="0.5"
        app:wheelStyle="@integer/STYLE_DAY" />
</LinearLayout>