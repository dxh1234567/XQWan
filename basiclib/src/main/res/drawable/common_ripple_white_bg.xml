<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/ripple_rectangle_fillet_corner" />
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="200dp" />
            <stroke
                android:width="1dp"
                android:color="@color/basic_refresh_text" />
            <solid android:color="@color/basic_transparent" />

            <padding
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp"
                android:top="8dp" />

        </shape>

    </item>
</layer-list>
